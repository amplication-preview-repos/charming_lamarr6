datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Job {
  id           String        @id @default(cuid())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  title        String?
  description  String?
  location     String?
  salary       Float?
  postedDate   DateTime?
  employer     Employer?     @relation(fields: [employerId], references: [id])
  employerId   String?
  applications Application[]
}

model Application {
  id             String                 @id @default(cuid())
  createdAt      DateTime               @default(now())
  updatedAt      DateTime               @updatedAt
  submissionDate DateTime?
  status         EnumApplicationStatus?
  job            Job?                   @relation(fields: [jobId], references: [id])
  jobId          String?
  user           User?                  @relation(fields: [userId], references: [id])
  userId         String?
}

model Employer {
  id           String       @id @default(cuid())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  jobs         Job[]
  description  String?
  companyName  String?
  website      String?
  contactEmail String?
  internships  Internship[]
}

model Internship {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  location    String?
  duration    String?
  stipend     Float?
  title       String?
  description String?
  employer    Employer? @relation(fields: [employerId], references: [id])
  employerId  String?
}

model User {
  id           String            @id @default(cuid())
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  firstName    String?
  lastName     String?
  email        String?           @unique
  password     String
  roles        Json
  education    String?
  photo        Json?
  userType     EnumUserUserType?
  applications Application[]
  username     String?
}

enum EnumApplicationStatus {
  Option1
}

enum EnumUserUserType {
  Option1
}
